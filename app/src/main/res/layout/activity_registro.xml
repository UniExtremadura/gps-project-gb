<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.login.RegistroActivity">

    <ImageView
        android:id="@+id/logoRegistro"
        android:layout_width="182dp"
        android:layout_height="186dp"
        android:contentDescription="logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.051"
        app:srcCompat="@drawable/logoappasee" />

    <TextView
        android:id="@+id/tituloRegistro"
        android:layout_width="245dp"
        android:layout_height="44dp"
        android:text="Regístrate"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoRegistro"
        app:layout_constraintVertical_bias="0.027" />

    <EditText
        android:id="@+id/nombreRegistro"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:textSize="16sp"
        android:inputType="text"
        android:hint="Nombre y Apellidos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloRegistro"
        app:layout_constraintVertical_bias="0.035" />

    <TextView
        android:id="@+id/errorNombre"
        android:layout_width="263dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:textColor="#FF0000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/nombreRegistro"
        app:layout_constraintTop_toBottomOf="@+id/nombreRegistro" />

    <EditText
        android:id="@+id/usernameRegistro"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:textSize="16sp"
        android:inputType="text"
        android:hint="Introduce un nombre de usuario"
        app:layout_constraintBottom_toTopOf="@+id/passRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nombreRegistro"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/errorUserRegistro"
        android:layout_width="263dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:textColor="#FF0000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/usernameRegistro"
        app:layout_constraintTop_toBottomOf="@+id/usernameRegistro" />

    <EditText
        android:id="@+id/emailRegistro"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:hint="example@email.com"
        app:layout_constraintBottom_toTopOf="@+id/passRegistro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameRegistro"
        app:layout_constraintVertical_bias="0.518" />

    <TextView
        android:id="@+id/errorEmailRegistro"
        android:layout_width="263dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:textColor="#FF0000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/emailRegistro"
        app:layout_constraintTop_toBottomOf="@+id/emailRegistro" />

    <EditText
        android:id="@+id/passRegistro"
        android:layout_width="263dp"
        android:layout_height="43dp"
        android:layout_marginBottom="148dp"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:hint="Introduce una contraseña"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloRegistro"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/errorPassRegistro"
        android:layout_width="263dp"
        android:layout_height="22dp"
        android:visibility="invisible"
        android:textColor="#FF0000"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/passRegistro"
        app:layout_constraintTop_toBottomOf="@+id/passRegistro" />

    <Button
        android:id="@+id/confirmarRegistro"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:text="Crear cuenta"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passRegistro"
        app:layout_constraintVertical_bias="0.363" />

    <Button
        android:id="@+id/inicarsesionRegistro"
        android:layout_width="145dp"
        android:layout_height="48dp"
        android:text="Iniciar sesión"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmarRegistro"
        app:layout_constraintVertical_bias="0.703" />

</androidx.constraintlayout.widget.ConstraintLayout>